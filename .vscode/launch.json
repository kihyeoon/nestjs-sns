{
  "version": "2.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS Server",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start:debug"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "restart": true,
      "port": 9229,
      "autoAttachChildProcesses": true
    }
  ]
}
